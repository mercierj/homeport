# =============================================================================
# Homeport Environment Configuration
# =============================================================================
# Copy this file to .env and customize for your environment.
# All variables with default values are optional unless marked [REQUIRED].
# =============================================================================

# =============================================================================
# AUTHENTICATION
# =============================================================================

# [REQUIRED on first startup] Admin password for the web dashboard
# Minimum 8 characters. Used to create the initial admin user.
ADMIN_PASSWORD=your-secure-password-here

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================

# Host to bind the API server to
# Use 0.0.0.0 to allow external connections
AGNOSTECH_HOST=localhost

# Port for the API server
AGNOSTECH_PORT=8080

# Disable authentication (development mode only!)
# WARNING: Never enable this in production
AGNOSTECH_NO_AUTH=false

# =============================================================================
# WEB FRONTEND CONFIGURATION (Vite)
# =============================================================================

# Backend API URL for the frontend
# In development: http://localhost:8080
# In production: Your actual API URL (e.g., https://api.yourdomain.com)
VITE_API_URL=http://localhost:8080

# Session token expiry in milliseconds
# Default: 86400000 (24 hours)
VITE_TOKEN_EXPIRY_MS=86400000

# =============================================================================
# LOGGING
# =============================================================================

# Enable verbose logging (debug level + source info)
AGNOSTECH_VERBOSE=false

# Quiet mode (errors only)
AGNOSTECH_QUIET=false

# Output logs as JSON format
AGNOSTECH_LOG_JSON=false

# =============================================================================
# TLS/HTTPS CONFIGURATION
# =============================================================================

# Enable TLS for the API server
AGNOSTECH_TLS_ENABLED=false

# Path to TLS certificate file (PEM format)
AGNOSTECH_TLS_CERT=/path/to/cert.pem

# Path to TLS private key file (PEM format)
AGNOSTECH_TLS_KEY=/path/to/key.pem

# Enable auto-TLS with Let's Encrypt (requires valid domain)
AGNOSTECH_TLS_AUTO=false

# Domain for auto-TLS certificate
AGNOSTECH_TLS_DOMAIN=

# Email for Let's Encrypt notifications
AGNOSTECH_TLS_EMAIL=admin@example.com

# =============================================================================
# DATA STORAGE
# =============================================================================

# Directory for Homeport data (auth, cache, etc.)
# Default: ~/.homeport
AGNOSTECH_DATA_DIR=~/.homeport

# =============================================================================
# AWS CREDENTIALS (for API scanning)
# =============================================================================

# AWS profile name (from ~/.aws/credentials)
AWS_PROFILE=default

# Or use explicit credentials:
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_SESSION_TOKEN=

# Default AWS region
AWS_REGION=us-east-1

# =============================================================================
# AZURE CREDENTIALS (for API scanning)
# =============================================================================

# Azure credentials (service principal)
# AZURE_TENANT_ID=
# AZURE_CLIENT_ID=
# AZURE_CLIENT_SECRET=

# Azure subscription ID
# AZURE_SUBSCRIPTION_ID=

# =============================================================================
# GCP CREDENTIALS (for API scanning)
# =============================================================================

# Path to GCP service account JSON key
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# GCP project ID
# GOOGLE_PROJECT_ID=

# =============================================================================
# DOCKER CONFIGURATION (for local development)
# =============================================================================

# Docker Compose project name
COMPOSE_PROJECT_NAME=homeport

# Frontend development port
FRONTEND_PORT=5173

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Include migration tools in generated output
AGNOSTECH_INCLUDE_MIGRATION=false

# Include monitoring stack (Prometheus, Grafana)
AGNOSTECH_INCLUDE_MONITORING=false
