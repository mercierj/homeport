# Traefik Static Configuration
# Generated: {{.GeneratedAt}}

entryPoints:
  web:
    address: ":80"
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https

  websecure:
    address: ":443"
    http:
      tls:
        certResolver: {{.CertResolver}}

{{- if .EnableMetrics}}
  metrics:
    address: ":8082"
{{- end}}

{{- if .EnableDashboard}}
api:
  dashboard: true
  insecure: false
{{- end}}

providers:
  docker:
    endpoint: "unix:///var/run/docker.sock"
    exposedByDefault: false
    network: {{.NetworkName}}
  file:
    directory: "/etc/traefik/dynamic"
    watch: true

{{- if .EnableMetrics}}
metrics:
  prometheus:
    entryPoint: metrics
    addEntryPointsLabels: true
    addServicesLabels: true
{{- end}}

log:
  level: {{.LogLevel}}
  filePath: "/var/log/traefik/traefik.log"

accessLog:
  filePath: "/var/log/traefik/access.log"

{{- if .ACMEEmail}}
certificatesResolvers:
  {{.CertResolver}}:
    acme:
      email: {{.ACMEEmail}}
      storage: /etc/traefik/acme/acme.json
      {{- if .ACMEServer}}
      caServer: {{.ACMEServer}}
      {{- end}}
      httpChallenge:
        entryPoint: web
{{- end}}
